<body class="fix-header fix-sidebar card-no-border">

    <div class="preloader" style="display: none;">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"></circle>
        </svg>
    </div>

    @{
        Html.RenderPartial("Header");
    }

    @{
        Html.RenderPartial("Side_Navigation");
    }

    <div class="page-wrapper">

        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Main Menu</h3>
            </div>
        </div>

        <div class="container-fluid">

            <div class="row">

                <div class="col-lg-12">
                    <div class="card card-outline-info">


                        <div class="card-body">

                            <div class="card-group">


                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                @*<h2 class="m-b-0"><a href="~/Soldier/List_Soldier"><i class="fa fa-users text-current_color"></i></a></h2>*@
                                                <h2 class="m-b-0">
                                                    <a href="~/Admin/List_Admin">
                                                        <i style="color:steelblue;" class="fa fa-users"></i>
                                                    </a>
                                                </h2>
                                                <h3 class="">@ViewBag.admin.Count</h3>
                                                <h6 class="card-subtitle">List Admin</h6>
                                            </div>
                                            <div class="col-12">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: 100%; height: 6px; background-color:steelblue;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>







                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h2 class="m-b-0">
                                                    <a href="~/Atlantic/List_Invoice">
                                                        <i style="color: #4a4236;" class="fa fa-file"></i>
                                                    </a>
                                                </h2>
                                                @*<h3 class="">@ViewBag.Pending_Leave_List.Count</h3>*@
                                                <h3 class="">@ViewBag.atlantic.Count</h3>
                                                <h6 class="card-subtitle">List Atlantic Invoice</h6>
                                            </div>
                                            <div class="col-12">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: 100%; height: 6px; background-color: #4a4236;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h2 class="m-b-0">
                                                    <a href="~/Brother/List_Invoice">
                                                        <i style="color: #008080;" class="fa fa-file-text"></i>
                                                    </a>
                                                </h2>
                                                <h3 class="">@ViewBag.brother.Count</h3>
                                                <h6 class="card-subtitle">List Brothers Invoices</h6>
                                            </div>
                                            <div class="col-12">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: 100%; height: 6px; background-color: #008080; " aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="clear"></div>

                            <hr class="hr_height m-t-40 m-b-40" />

                        </div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>


        


    </div>

    @{
    Html.RenderPartial("Footer");
    }

</body>